# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 应用配置
DEBUG=false
HOST=0.0.0.0
PORT=8001

# 数据库
DATABASE_URL=sqlite+aiosqlite:///./data/stock.db

# 日志
LOG_LEVEL=INFO

# 市场时区（用于交易时段判断与定时任务）
MARKET_TIMEZONE=Asia/Shanghai

# Scheduler（定时任务）
# 多 worker 场景下仅 leader 进程会真正启动并执行任务（通过文件锁选主）
ENABLE_SCHEDULER=true
SCHEDULER_LOCK_PATH=./data/scheduler.lock
